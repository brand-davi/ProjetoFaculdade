@model IEnumerable<ProjectManagerMvc.ViewModels.UserListItemViewModel>
@{
    ViewData["Title"] = "Usuários";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Usuários</h3>
    <a class="btn btn-primary" href="/Users/Create">Novo</a>
</div>
<div class="card p-3">
<table class="table align-middle">
    <thead>
        <tr>
            <th>Nome</th><th>E-mail</th><th>CPF</th><th>Cargo</th><th>Perfil</th><th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.FullName</td>
                <td>@u.Email</td>
                <td>@u.CPF</td>
                <td>@u.Position</td>
                <td><span class="badge text-bg-secondary">@u.Role</span></td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-primary" href="/Users/Edit/@u.Id">Editar</a>
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@u.Id" />
                        <button class="btn btn-sm btn-outline-danger" onclick="return confirm('Excluir usuário?')">Excluir</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
