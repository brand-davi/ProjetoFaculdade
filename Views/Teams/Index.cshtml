@model IEnumerable<ProjectManagerMvc.Models.Team>
@{
    ViewData["Title"] = "Equipes";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Equipes</h3>
    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
    {
        <a class="btn btn-primary" href="/Teams/Create">Nova</a>
    }
</div>
<div class="card p-3">
<table class="table align-middle">
    <thead>
        <tr>
            <th>Nome</th><th>Descrição</th><th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Name</td>
                <td>@t.Description</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-primary" href="/Teams/Details/@t.Id">Detalhes</a>
                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                    {
                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@t.Id" />
                            <button class="btn btn-sm btn-outline-danger" onclick="return confirm('Excluir equipe?')">Excluir</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
