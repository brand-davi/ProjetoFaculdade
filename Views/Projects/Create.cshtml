@model ProjectManagerMvc.Models.Project
@{
    ViewData["Title"] = "Novo Projeto";
}
<div class="card p-4">
    <h3>Novo Projeto</h3>
    <form asp-action="Create" method="post">
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Nome</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label class="form-label">Descrição</label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>
            <div class="col-md-4">
                <label class="form-label">Início</label>
                <input asp-for="StartDate" type="date" class="form-control" />
            </div>
            <div class="col-md-4">
                <label class="form-label">Prev. Término</label>
                <input asp-for="PlannedEndDate" type="date" class="form-control" />
            </div>
            <div class="col-md-4">
                <label class="form-label">Status</label>
                <select asp-for="Status" class="form-select"></select>
            </div>
            <div class="col-md-6">
                <label class="form-label">Gerente</label>
                <select asp-for="ManagerId" class="form-select" asp-items="ViewBag.Managers"></select>
                <span asp-validation-for="ManagerId" class="text-danger"></span>
            </div>
        </div>
        <div class="mt-3">
            <button class="btn btn-primary">Salvar</button>
            <a class="btn btn-secondary" href="/Projects">Voltar</a>
        </div>
    </form>
</div>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }
