@model ProjectManagerMvc.Models.TaskItem
@{
    ViewData["Title"] = "Nova Tarefa";
}
<div class="card p-4">
    <h3>Nova Tarefa</h3>
    <form asp-action="Create" method="post">
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Título</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label class="form-label">Descrição</label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>
            <div class="col-md-4">
                <label class="form-label">Projeto</label>
                <select asp-for="ProjectId" class="form-select" asp-items="ViewBag.Projects"></select>
            </div>
            <div class="col-md-4">
                <label class="form-label">Responsável</label>
                <select asp-for="AssigneeId" class="form-select" asp-items="ViewBag.Users"></select>
            </div>
            <div class="col-md-4">
                <label class="form-label">Vencimento</label>
                <input asp-for="DueDate" type="date" class="form-control" />
            </div>
        </div>
        <div class="mt-3">
            <button class="btn btn-primary">Salvar</button>
            <a class="btn btn-secondary" href="/Tasks">Voltar</a>
        </div>
    </form>
</div>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }
