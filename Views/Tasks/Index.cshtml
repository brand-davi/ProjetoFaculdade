@model IEnumerable<ProjectManagerMvc.Models.TaskItem>
@{
    ViewData["Title"] = "Tarefas";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Tarefas</h3>
    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
    {
        <a class="btn btn-primary" href="/Tasks/Create">Nova</a>
    }
</div>
<div class="card p-3">
<table class="table align-middle">
    <thead>
        <tr>
            <th>Título</th><th>Projeto</th><th>Responsável</th><th>Vencimento</th><th>Status</th><th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Title</td>
                <td>@t.Project?.Name</td>
                <td>@t.Assignee?.FullName</td>
                <td>@(t.DueDate?.ToString("dd/MM/yyyy"))</td>
                <td><span class="badge text-bg-secondary">@t.Status</span></td>
                <td class="text-end">
                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                    {
                        <a class="btn btn-sm btn-outline-primary" href="/Tasks/Edit/@t.Id">Editar</a>
                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@t.Id" />
                            <button class="btn btn-sm btn-outline-danger" onclick="return confirm('Excluir tarefa?')">Excluir</button>
                        </form>
                    }
                    @if (User.IsInRole("Collaborator") && User?.Identity?.Name != null && t.Assignee?.Email == User.Identity.Name)
                    {
                        <form asp-action="UpdateMyStatus" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@t.Id" />
                            <select class="form-select d-inline w-auto" name="status">
                                <option value="Pending">Pending</option>
                                <option value="InProgress">InProgress</option>
                                <option value="Done">Done</option>
                                <option value="Blocked">Blocked</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>
                            <button class="btn btn-sm btn-outline-success">Atualizar</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
